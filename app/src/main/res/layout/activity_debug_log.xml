<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DebugLog" >
    
    <Button
            android:id="@+id/debug_log_view_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:onClick="showLog"
            android:text="View log (warning: may be very slow)" />

    <TextView
        android:id="@+id/debug_log_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <EditText
        android:id="@+id/debug_log_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Optional; add a message"
        android:lines="2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/debug_log_button"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Send" />

        <Button
            android:id="@+id/debug_log_clear"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Clear" />
        
    </LinearLayout>
    
    <TextView
        android:id="@+id/debug_log_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note: your LT credentials are neither logged nor sent." />

</LinearLayout>